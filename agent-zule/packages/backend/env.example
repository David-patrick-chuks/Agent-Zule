# Database Configuration
MONGODB_URI=mongodb://localhost:27017/agent-zule
MONGODB_TEST_URI=mongodb://localhost:27017/agent-zule-test

# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Envio Configuration
ENVIO_API_KEY=your-envio-api-key
ENVIO_GRAPHQL_URL=https://api.envio.dev/graphql
ENVIO_INDEXER_URL=https://indexer.envio.dev

# Monad Configuration
MONAD_RPC_URL=https://testnet.monad.xyz
MONAD_CHAIN_ID=123456789
MONAD_EXPLORER_URL=https://testnet.monadexplorer.com

# MetaMask Smart Accounts
METAMASK_SMART_ACCOUNT_FACTORY=0x9406Cc6185a346906296840746125a0E44976454
METAMASK_ENTRYPOINT=0x5FF137D4b0FDCD49DcA30c7CF57E578a026d2789

# AI Configuration
AI_MODEL_PATH=./models/portfolio-ai
AI_CONFIDENCE_THRESHOLD=0.8
AI_MAX_RECOMMENDATIONS=10

# Risk Management
MAX_POSITION_SIZE=0.1
VOLATILITY_THRESHOLD=0.05
AUTO_REVOKE_THRESHOLD=0.15

# Community Voting
COMMUNITY_VOTING_ENABLED=true
MIN_COMMUNITY_VOTES=3
VOTE_TIMEOUT_HOURS=24

# Cross-chain Monitoring
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-key
ETHEREUM_CHAIN_ID=1
CROSS_CHAIN_BRIDGE_ADDRESS=0x...

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/agent-zule.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
